<%- include('partials/header') %>

<% 
// Sécurité : si services n'est pas envoyé par le serveur, on évite le crash
if (typeof services === 'undefined') { var services = []; } 
%>

<main class="min-h-screen bg-slate-50 py-20 px-4">
    <div class="max-w-6xl mx-auto">
        
        <div class="text-center mb-16">
            <h2 class="text-blue-600 font-bold uppercase tracking-widest text-sm mb-3">Mon Expertise</h2>
            <h1 class="text-4xl md:text-5xl font-extrabold text-slate-900 mb-4">
                Solutions & Services
            </h1>
            <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                Je vous accompagne dans la transformation numérique de vos idées en produits performants et scalables.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% if (services.length > 0) { %>
                <% services.forEach(service => { %>
                    <div class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-xl shadow-blue-900/5 hover:shadow-2xl hover:shadow-blue-900/10 transition-all duration-300 group">
                        
                        <div class="w-16 h-16 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center text-2xl mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors duration-300">
                            <i class="fas <%= service.icone || 'fa-laptop-code' %>"></i>
                        </div>

                        <h3 class="text-2xl font-bold text-slate-900 mb-4"><%= service.titre %></h3>
                        
                        <p class="text-slate-600 leading-relaxed mb-6">
                            <%= service.description %>
                        </p>

                        <% if (service.details) { %>
                            <ul class="space-y-3">
                                <% service.details.split(',').forEach(item => { %>
                                    <li class="flex items-center text-sm text-slate-500">
                                        <i class="fas fa-check text-blue-500 mr-2 text-xs"></i>
                                        <%= item.trim() %>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-span-full text-center py-20 bg-white rounded-3xl border border-dashed border-slate-200">
                    <i class="fas fa-layer-group text-slate-300 text-5xl mb-4"></i>
                    <p class="text-slate-400">Aucun service n'est répertorié pour le moment.</p>
                </div>
            <% } %>
        </div>

        <div class="mt-20 bg-blue-600 rounded-[3rem] p-10 md:p-16 text-center text-white shadow-2xl shadow-blue-600/30">
            <h2 class="text-3xl font-bold mb-6">Vous avez un projet spécifique ?</h2>
            <p class="text-blue-100 mb-8 max-w-xl mx-auto">Parlons de vos besoins et voyons comment je peux vous aider à atteindre vos objectifs.</p>
            <a href="/contact" class="inline-block bg-white text-blue-600 px-10 py-4 rounded-full font-bold hover:bg-blue-50 transition-colors">
                Démarrer un projet
            </a>
        </div>
    </div>
</main>

<%- include('partials/footer') %>