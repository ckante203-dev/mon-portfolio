<%- include('partials/header') %>

<main class="min-h-screen bg-slate-50 py-20 px-4">
    <div class="max-w-6xl mx-auto">
        
        <div class="text-center mb-16">
            <h2 class="text-blue-600 font-bold uppercase tracking-widest text-sm mb-3">Expertise & Solutions</h2>
            <h1 class="text-4xl md:text-5xl font-extrabold text-slate-900 mb-4">
                Services <span class="text-blue-600">&</span> Technologies
            </h1>
            <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                Du logiciel de gestion complexe à l'application mobile, je transforme vos besoins techniques en solutions business.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-24">
            <% if (services.length > 0) { %>
                <% services.forEach(service => { %>
                    <div class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-xl shadow-blue-900/5 hover:shadow-2xl hover:shadow-blue-900/10 transition-all duration-300 group">
                        <div class="w-16 h-16 bg-blue-50 text-blue-600 rounded-2xl flex items-center justify-center text-2xl mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                            <i class="fas <%= service.icone || 'fa-laptop-code' %>"></i>
                        </div>
                        <h3 class="text-2xl font-bold text-slate-900 mb-4"><%= service.titre %></h3>
                        <p class="text-slate-600 leading-relaxed mb-6"><%= service.description %></p>
                        
                        <% if (service.details) { %>
                            <ul class="space-y-3">
                                <% service.details.split(',').forEach(item => { %>
                                    <li class="flex items-center text-sm text-slate-500">
                                        <i class="fas fa-check text-blue-500 mr-2 text-xs"></i>
                                        <%= item.trim() %>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } %>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <div class="bg-white rounded-[3rem] p-10 md:p-16 border border-slate-100 shadow-sm">
            <div class="flex flex-col md:flex-row gap-12 items-center">
                <div class="md:w-1/3">
                    <h2 class="text-3xl font-black text-slate-900 mb-4">Ma Stack <br><span class="text-blue-600">Technique</span></h2>
                    <p class="text-slate-500">Voici les outils et langages que j'utilise pour garantir la sécurité et la scalabilité de vos projets.</p>
                </div>
                <div class="md:w-2/3 flex flex-wrap gap-3">
                    <% if (typeof competences !== 'undefined' && competences.length > 0) { %>
                        <% competences.forEach(tech => { %>
                            <span class="px-5 py-2 bg-slate-50 text-slate-700 border border-slate-200 rounded-xl text-sm font-bold hover:border-blue-500 hover:text-blue-600 transition-all cursor-default">
                                <%= tech.nom %>
                            </span>
                        <% }); %>
                    <% } else { %>
                        <p class="text-slate-400 italic">Chargement des compétences...</p>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="mt-20 bg-slate-900 rounded-[3rem] p-10 md:p-16 text-center text-white shadow-2xl">
            <h2 class="text-3xl font-bold mb-6">Besoin d'une expertise spécifique ?</h2>
            <p class="text-slate-400 mb-8 max-w-xl mx-auto">Que ce soit pour du SQL Server, du Node.js ou une architecture complète, discutons de votre vision.</p>
            <a href="/contact" class="inline-block bg-blue-600 text-white px-10 py-4 rounded-full font-bold hover:bg-blue-700 transition-all transform hover:scale-105">
                Me contacter maintenant
            </a>
        </div>
    </div>
</main>

<%- include('partials/footer') %>