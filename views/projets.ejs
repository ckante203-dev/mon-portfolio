<%- include('partials/header') %>

<main class="min-h-screen bg-slate-50 py-16 px-4">
    <div class="max-w-6xl mx-auto">
        
        <div class="text-center mb-8">
            <h1 class="text-4xl md:text-5xl font-black text-slate-900 mb-4">
                Mes <span class="text-blue-600">Projets</span>
            </h1>
            <p class="text-slate-600 max-w-xl mx-auto">
                Explorez mes réalisations professionnelles et mes expérimentations techniques.
            </p>
        </div>

        <div class="flex justify-center gap-4 mb-16">
            <button onclick="filterProjects('all')" id="btn-all" class="filter-btn px-6 py-2 rounded-full bg-blue-600 text-white font-bold transition-all shadow-md">Tout</button>
            <button onclick="filterProjects('pro')" id="btn-pro" class="filter-btn px-6 py-2 rounded-full bg-white text-slate-600 border border-slate-200 hover:border-blue-600 font-bold transition-all">Clients</button>
            <button onclick="filterProjects('perso')" id="btn-perso" class="filter-btn px-6 py-2 rounded-full bg-white text-slate-600 border border-slate-200 hover:border-blue-600 font-bold transition-all">Labs</button>
        </div>

        <section id="section-pro" class="project-section mb-20">
            <div class="flex items-center gap-4 mb-10">
                <div class="h-10 w-2 bg-blue-600 rounded-full"></div>
                <h2 class="text-2xl font-black text-slate-900 uppercase tracking-wider">Références Clients</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                <% if (projetsPro.length > 0) { %>
                    <% projetsPro.forEach(projet => { %>
                        <article class="bg-white rounded-[2.5rem] p-4 shadow-xl border border-blue-100 flex flex-col md:flex-row gap-6 hover:shadow-2xl transition-all duration-300">
                            <div class="md:w-1/2 h-64 overflow-hidden rounded-[2rem]">
                                <img src="<%= projet.image_url || 'https://via.placeholder.com/400x300' %>" class="w-full h-full object-cover" alt="<%= projet.titre %>">
                            </div>
                            <div class="md:w-1/2 flex flex-col justify-center p-4">
                                <span class="text-blue-600 font-bold text-[10px] uppercase mb-2">Projet Entreprise</span>
                                <h3 class="text-2xl font-bold mb-3"><%= projet.titre %></h3>
                                <p class="text-slate-600 text-sm mb-6"><%= projet.description %></p>
                                <a href="<%= projet.demo_url %>" target="_blank" class="bg-slate-900 text-white text-center py-3 rounded-xl font-bold hover:bg-blue-600 transition shadow-lg">Voir la réalisation</a>
                            </div>
                        </article>
                    <% }); %>
                <% } else { %>
                    <p class="text-slate-400 italic">Aucune référence client pour le moment.</p>
                <% } %>
            </div>
        </section>

        <section id="section-perso" class="project-section mb-20">
            <div class="flex items-center gap-4 mb-10">
                <div class="h-10 w-2 bg-emerald-500 rounded-full"></div>
                <h2 class="text-2xl font-black text-slate-900 uppercase tracking-wider">Projets Personnels</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <% if (projetsPerso.length > 0) { %>
                    <% projetsPerso.forEach(projet => { %>
                        <article class="bg-white rounded-3xl overflow-hidden shadow-md border border-slate-100 hover:-translate-y-2 transition-transform duration-300">
                            <div class="h-48 bg-slate-200 overflow-hidden">
                                <img src="<%= projet.image_url || 'https://via.placeholder.com/400x250' %>" class="w-full h-full object-cover" alt="<%= projet.titre %>">
                            </div>
                            <div class="p-6">
                                <h3 class="font-bold text-lg mb-2"><%= projet.titre %></h3>
                                <p class="text-slate-500 text-xs mb-4"><%= projet.description %></p>
                                <div class="flex justify-between items-center">
                                    <span class="text-[10px] bg-emerald-50 text-emerald-600 px-2 py-1 rounded font-bold uppercase">Labs</span>
                                    <a href="<%= projet.demo_url %>" target="_blank" class="text-blue-600 text-xs font-bold hover:underline">DÉMO <i class="fas fa-arrow-right"></i></a>
                                </div>
                            </div>
                        </article>
                    <% }); %>
                <% } else { %>
                    <p class="text-slate-400 italic">Aucun projet personnel pour le moment.</p>
                <% } %>
            </div>
        </section>

    </div>
</main>

<script>
    function filterProjects(type) {
        const sections = document.querySelectorAll('.project-section');
        const buttons = document.querySelectorAll('.filter-btn');

        buttons.forEach(btn => {
            btn.classList.remove('bg-blue-600', 'text-white', 'shadow-md');
            btn.classList.add('bg-white', 'text-slate-600', 'border');
        });

        const activeBtn = document.getElementById('btn-' + type);
        activeBtn.classList.remove('bg-white', 'text-slate-600', 'border');
        activeBtn.classList.add('bg-blue-600', 'text-white', 'shadow-md');

        sections.forEach(section => {
            if (type === 'all') {
                section.style.display = 'block';
            } else if (section.id === 'section-' + type) {
                section.style.display = 'block';
            } else {
                section.style.display = 'none';
            }
        });
    }
</script>

<%- include('partials/footer') %>